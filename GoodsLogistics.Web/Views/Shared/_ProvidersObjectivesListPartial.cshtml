
@using GoodsLogistics.Localization.Resources
@model GoodsLogistics.ViewModels.DTO.ObjectiveListViewModel

<div class="row">

    @foreach (var objective in Model.Objectives)
    {
        <div class="col-lg-6 notRespondRequest_holder">
            <div class="notRespondRequest_item">

                <form data-requestForm="requestForm" action="@Url.Action("", "")" method="post" data-objectiveSendRequestForm="objectiveSendRequestForm">

                    <input type="hidden" name="ObjectiveId" value="@objective.ObjectiveId" data-objectiveId="objectiveId" />

                    <div class="d-flex justify-content-end reserved_item_date mb10">@objective.CreationDate.ToShortDateString()</div>

                    <div class="row notRespondRequest_item_description_holder">
                        <div class="col-lg-6">@Resources.DeliveryDate: @objective.OrderDate.ToShortDateString()</div>
                        <div class="col-lg-6 tar">@Resources.Frequency: @objective.Frequency</div>
                    </div>
                    <div class="row notRespondRequest_item_description_holder">
                        <div class="col-lg-6">@Resources.DeliveryTime: @objective.OrderDate.ToShortTimeString()</div>
                        <div class="col-lg-6 tar">@Resources.EndDate: @objective.EndDate.ToShortDateString()</div>
                    </div>
                    <div class="row notRespondRequest_item_description_holder">
                        <div class="col-lg-6">@Resources.Customer: @objective.ReceiverCompany.Name</div>
                        <div class="col-lg-6 tar">@Resources.Price: @objective.Price</div>
                    </div>
                    <div class="notRespondRequest_item_description_line"></div>
                    <div class="row respond_button_holder d-flex justify-content-end" data-requestButtonHolder="requestButtonHolder">
                        <div class="col-lg-6">
                            <div class="row">
                                <div class="col-lg-8">
                                    <button type="button" class="button_empty bg-color" data-objectiveSendRequestButton="objectiveSendRequestButton">
                                        @Resources.SendRequest
                                    </button>
                                </div>
                                <div class="col-lg-4">
                                    <button type="button" class="button" data-objectiveDetails="objectiveDetails">
                                        <i class="fas fa-info-circle"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    }

</div>