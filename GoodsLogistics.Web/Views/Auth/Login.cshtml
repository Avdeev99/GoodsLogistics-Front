@using GoodsLogistics.Localization.Resources
@model GoodsLogistics.ViewModels.DTO.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section>
    <div class="login_holder">
        <div class="login_title">Welcome</div>
        @using (Html.BeginForm("Login", "Auth", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "input", placeholder = Resources.EnterEmail, required = "required" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label(Resources.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "input", placeholder = Resources.EnterPassword, required = "required" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="login_button_holder">
                <input type="submit" class="button w-100" value=@Resources.Login>
            </div>
            <div class="no_account">
                <span class="no_account_text">@Resources.NoAccount </span>
                @Html.ActionLink(Resources.Register, "Register", new { returnUrl = Model.ReturnUrl }, new { @class = "no_account_register" })
            </div>
        }

    </div>
</section>
